<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".Activity.Step2HardwareActivity">

    <!-- HEADER CON PROGRESS INDICATOR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2196F3"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Progress Steps Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Step 1 -->
            <View
                android:id="@+id/progress_step_1"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:background="#4CAF50"
                android:layout_marginEnd="6dp" />

            <View
                android:layout_width="16dp"
                android:layout_height="2dp"
                android:background="#66FFFFFF"
                android:layout_marginEnd="6dp" />

            <!-- Step 2 -->
            <View
                android:id="@+id/progress_step_2"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:background="#FFFFFF"
                android:layout_marginEnd="6dp" />

            <View
                android:layout_width="16dp"
                android:layout_height="2dp"
                android:background="#66FFFFFF"
                android:layout_marginEnd="6dp" />

            <!-- Step 3 -->
            <View
                android:id="@+id/progress_step_3"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:background="#33FFFFFF"
                android:layout_marginEnd="6dp" />

            <View
                android:layout_width="16dp"
                android:layout_height="2dp"
                android:background="#66FFFFFF"
                android:layout_marginEnd="6dp" />

            <!-- Step 4 -->
            <View
                android:id="@+id/progress_step_4"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:background="#33FFFFFF"
                android:layout_marginEnd="6dp" />

            <View
                android:layout_width="16dp"
                android:layout_height="2dp"
                android:background="#66FFFFFF"
                android:layout_marginEnd="6dp" />

            <!-- Step 5 -->
            <View
                android:id="@+id/progress_step_5"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:background="#33FFFFFF" />

        </LinearLayout>

        <!-- Step Counter -->
        <TextView
            android:id="@+id/tv_step_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 2 di 4"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Titolo Step -->
        <TextView
            android:id="@+id/tv_titolo_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specifiche Hardware"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Descrizione Step -->
        <TextView
            android:id="@+id/tv_descrizione_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inserisci le specifiche del tuo hardware attuale o desiderato"
            android:textColor="#CCFFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2" />

    </LinearLayout>

    <!-- CONTENUTO PRINCIPALE -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- SEZIONE CPU -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’» Processore (CPU)"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/et_cpu"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="es: Intel Core i7-10750H, AMD Ryzen 5 5600X"
                        android:inputType="text"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- SEZIONE RAM -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ§  Memoria RAM"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinner_ram"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_background" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- SEZIONE STORAGE -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¾ Archiviazione"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <EditText
                            android:id="@+id/et_storage_size"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="Dimensione (GB)"
                            android:inputType="number"
                            android:background="@drawable/edittext_background"
                            android:padding="12dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="GB"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="#757575" />

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/spinner_storage_type"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_background" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- SEZIONE GPU -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ® Scheda Grafica (GPU)"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="12dp" />

                    <RadioGroup
                        android:id="@+id/radio_group_gpu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <RadioButton
                            android:id="@+id/rb_gpu_integrata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="GPU Integrata (nel processore)"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <RadioButton
                            android:id="@+id/rb_gpu_dedicata"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="GPU Dedicata (scheda separata)"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <RadioButton
                            android:id="@+id/rb_gpu_nessuna"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Non so / Non importante"
                            android:textSize="16sp"
                            android:padding="8dp" />

                    </RadioGroup>

                    <EditText
                        android:id="@+id/et_gpu_dettagli"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Specifica marca e modello"
                        android:inputType="text"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- SPAZIO FINALE -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

    </ScrollView>

    <!-- NAVIGATION BUTTONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <!-- Pulsante Indietro -->
        <Button
            android:id="@+id/btn_indietro"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Indietro"
            android:textColor="#2196F3"
            android:textSize="16sp"
            android:background="@drawable/button_outline"
            android:layout_marginEnd="8dp" />

        <!-- Pulsante Avanti -->
        <Button
            android:id="@+id/btn_avanti"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Avanti"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_primary"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>