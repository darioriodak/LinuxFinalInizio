<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardDistribuzione"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER CON CHECKBOX E EMOJI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Checkbox Selezione -->
            <CheckBox
                android:id="@+id/checkBoxDistribuzione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:buttonTint="@color/primary" />

            <!-- Emoji/Icona Distribuzione -->
            <TextView
                android:id="@+id/tvEmojiDistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ§"
                android:textSize="32sp"
                android:layout_marginEnd="12dp"
                tools:text="ðŸ§" />

            <!-- Nome e PopolaritÃ  -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Nome Distribuzione -->
                <TextView
                    android:id="@+id/tvNomeDistribuzione"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubuntu Desktop"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Ubuntu Desktop" />

                <!-- Stelle PopolaritÃ  -->
                <TextView
                    android:id="@+id/tvPopolarita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â˜…â˜…â˜…â˜…â˜…"
                    android:textColor="@color/rating_stars"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    tools:text="â˜…â˜…â˜…â˜…â˜†" />

            </LinearLayout>

            <!-- Badge DifficoltÃ  -->
            <TextView
                android:id="@+id/tvDifficolta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Principianti"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/badge_principianti"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                tools:text="Intermedio" />

        </LinearLayout>

        <!-- DESCRIZIONE -->
        <TextView
            android:id="@+id/tvDescrizioneDistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distribuzione user-friendly basata su Debian, perfetta per iniziare con Linux"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="12dp"
            tools:text="Distribuzione user-friendly basata su Debian, perfetta per iniziare con Linux" />

        <!-- TAGS/CARATTERISTICHE (Opzionale) -->
        <LinearLayout
            android:id="@+id/layoutTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- Tag Example -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desktop"
                android:textColor="@color/primary"
                android:textSize="10sp"
                android:background="@drawable/tag_background"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:layout_marginEnd="4dp"
                tools:text="Desktop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LTS"
                android:textColor="@color/success_color"
                android:textSize="10sp"
                android:background="@drawable/tag_background_success"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                tools:text="LTS" />

        </LinearLayout>

    </LinearLayout>

    <!-- Indicatore Selezione (bordo colorato) -->
    <View
        android:id="@+id/selectionIndicator"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/primary"
        android:visibility="invisible"
        android:layout_gravity="bottom" />

</androidx.cardview.widget.CardView>