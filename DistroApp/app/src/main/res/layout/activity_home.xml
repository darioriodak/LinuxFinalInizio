<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#F8F9FA"
    tools:context=".Activity.HomeActivity">

    <!-- Logo o icona app (opzionale) -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="Logo app"/>

    <!-- Titolo principale -->
    <TextView
        android:id="@+id/textViewTitoloApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linux Distro Advisor"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Sottotitolo descrittivo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ottieni consigli personalizzati da esperti\nper scegliere la distribuzione Linux perfetta"
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginBottom="48dp"/>

    <!-- Pulsante principale: Accedi/Registrati -->
    <Button
        android:id="@+id/buttonLoginRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inizia - Accedi o Registrati"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        style="@style/Widget.Material3.Button"/>

    <!-- Informazioni aggiuntive -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🐧 Scopri Ubuntu, Fedora, Arch e molte altre\n👥 Consigli da esperti della community\n⚡ Raccomandazioni personalizzate"
        android:textSize="14sp"
        android:textColor="#888888"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginTop="32dp"/>

</LinearLayout>