<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:id="@+id/cardEsperto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Checkbox per selezione -->
        <CheckBox
            android:id="@+id/checkBoxEsperto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginEnd="12dp" />

        <!-- Contenuto esperto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Header con nome e specializzazione -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <!-- Icona specializzazione -->
                <TextView
                    android:id="@+id/tvIconaSpecializzazione"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👨‍💻"
                    android:textSize="24sp"
                    android:layout_marginEnd="8dp" />

                <!-- Info principale -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Nome esperto -->
                    <TextView
                        android:id="@+id/tvNomeEsperto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mario Rossi"
                        android:textSize="16sp"
                        android:textStyle="bold"
                         />

                    <!-- Specializzazione -->
                    <TextView
                        android:id="@+id/tvSpecializzazione"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Specialista Server e Cloud"
                        android:textSize="14sp"

                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <!-- Stato disponibilità -->
                <TextView
                    android:id="@+id/tvStatoDisponibilita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disponibile"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Esperienza -->
            <TextView
                android:id="@+id/tvEsperienza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 anni di esperienza"
                android:textSize="13sp"

                android:layout_marginBottom="4dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />

            <!-- Feedback e stelle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <!-- Icona feedback -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp" />

                <!-- Stelle feedback -->
                <TextView
                    android:id="@+id/tvStelle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★★★★☆"
                    android:textSize="14sp"
                    android:textColor="#FFC107"
                    android:layout_marginEnd="8dp" />

                <!-- Testo feedback -->
                <TextView
                    android:id="@+id/tvFeedback"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4.2 (15 valutazioni)"
                    android:textSize="13sp"
                     />

            </LinearLayout>

            <!-- Bio (opzionale) -->
            <TextView
                android:id="@+id/tvBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Specialista in configurazioni server enterprise e soluzioni cloud. Esperienza con tutte le principali distribuzioni."
                android:textSize="12sp"

                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:maxLines="3"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>