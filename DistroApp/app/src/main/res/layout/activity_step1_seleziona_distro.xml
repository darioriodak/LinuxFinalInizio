<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".Activity.Step1SelezionaDistroActivity">

    <!-- HEADER CON PROGRESS INDICATOR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2196F3"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Progress Steps Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Step 1 -->
            <View
                android:id="@+id/progress_step_1"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <!-- Connector -->
            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="#66FFFFFF"
                android:layout_marginEnd="8dp" />

            <!-- Step 2 -->
            <View
                android:id="@+id/progress_step_2"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="#33FFFFFF"
                android:layout_marginEnd="8dp" />

            <!-- Connector -->
            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="#66FFFFFF"
                android:layout_marginEnd="8dp" />

            <!-- Step 3 -->
            <View
                android:id="@+id/progress_step_3"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="#33FFFFFF"
                android:layout_marginEnd="8dp" />

            <!-- Connector -->
            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="#66FFFFFF"
                android:layout_marginEnd="8dp" />

            <!-- Step 4 -->
            <View
                android:id="@+id/progress_step_4"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="#33FFFFFF" />

        </LinearLayout>

        <!-- Step Counter -->
        <TextView
            android:id="@+id/tv_step_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1 di 4"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Titolo Step -->
        <TextView
            android:id="@+id/tv_titolo_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleziona Distribuzioni"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Descrizione Step -->
        <TextView
            android:id="@+id/tv_descrizione_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scegli le distribuzioni Linux che ti interessano di piÃ¹"
            android:textColor="#CCFFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2" />

    </LinearLayout>

    <!-- CONTENUTO PRINCIPALE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- INFO SELEZIONE -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Seleziona da 1 a 5 distribuzioni che ti interessano. Gli esperti valuteranno le migliori opzioni per te."
                    android:textColor="#212121"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.2" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- STATO CARICAMENTO -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_bar_distribuzioni"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="visible"
                android:indeterminateTint="#2196F3" />

            <!-- Messaggio Errore -->
            <TextView
                android:id="@+id/tv_errore_distribuzioni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:text="Errore nel caricamento delle distribuzioni"
                android:textColor="#F44336"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="20dp"
                android:drawablePadding="8dp" />

        </FrameLayout>

        <!-- LISTA DISTRIBUZIONI -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_distribuzioni"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:background="#FFDDDD"
            android:padding="8dp" />

    </LinearLayout>

    <!-- NAVIGATION BUTTONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <!-- Pulsante Avanti -->
        <Button
            android:id="@+id/btn_avanti"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Seleziona almeno una distribuzione"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#BDBDBD"
            android:enabled="false"
            android:alpha="0.5" />

    </LinearLayout>

</LinearLayout>