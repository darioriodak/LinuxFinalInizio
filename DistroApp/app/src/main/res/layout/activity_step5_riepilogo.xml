<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- Progress Indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <View
                    android:id="@+id/progress_step_1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/step_completed" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:background="@color/primary_color" />

                <View
                    android:id="@+id/progress_step_2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/step_completed" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:background="@color/primary_color" />

                <View
                    android:id="@+id/progress_step_3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/step_completed" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:background="@color/primary_color" />

                <View
                    android:id="@+id/progress_step_4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/step_completed" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:background="@color/primary_color" />

                <View
                    android:id="@+id/progress_step_5"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/step_active" />

            </LinearLayout>

            <!-- Step Counter -->
            <TextView
                android:id="@+id/tv_step_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Step 5 di 5"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp" />

            <!-- Titolo -->
            <TextView
                android:id="@+id/tv_titolo_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Riepilogo Richiesta"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textAlignment="center"
                android:layout_marginBottom="8dp" />

            <!-- Descrizione -->
            <TextView
                android:id="@+id/tv_descrizione_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Controlla i dati inseriti e invia la tua richiesta di consulenza"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:textAlignment="center"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Riepilogo Distribuzioni -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🐧 Distribuzioni di Interesse"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_riepilogo_distribuzioni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Caricamento distribuzioni..."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Riepilogo Esperienza -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🎯 Esperienza e Modalità"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_riepilogo_esperienza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Caricamento esperienza..."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Dettagli Utilizzo (opzionale) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📝 Dettagli Utilizzo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_riepilogo_dettagli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nessun dettaglio specificato"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Riepilogo Esperti -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👥 Selezione Esperti"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_riepilogo_modalita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Caricamento modalità..."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_riepilogo_esperti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nessuna nota per esperti"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="2dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Note Finali (opzionali) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💬 Note Aggiuntive (opzionale)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aggiungi eventuali note finali per gli esperti"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Note aggiuntive per la consulenza..."
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/text_secondary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_note_finali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="3"
                        android:maxLines="5"
                        android:inputType="textMultiLine|textCapSentences"
                        android:gravity="top|start"
                        android:scrollbars="vertical"
                        android:maxLength="300" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Spacer per push dei bottoni in basso -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Sezione Invio -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/primary_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ Richiesta Pronta"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I dati sono stati verificati e la richiesta è pronta per essere inviata agli esperti"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:alpha="0.9" />

                <!-- Progress Bar per invio -->
                <ProgressBar
                    android:id="@+id/progress_bar_invio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    android:indeterminateTint="@android:color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Bottoni Navigazione -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_indietro"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Indietro"
                android:textColor="@color/primary_color"
                android:backgroundTint="@android:color/transparent"
                app:strokeColor="@color/primary_color"
                app:strokeWidth="2dp"
                app:icon="@drawable/ic_arrow_back"
                app:iconGravity="textStart"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_invia_richiesta"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="2"
                android:layout_marginStart="8dp"
                android:text="🚀 Invia Richiesta"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary_color"
                app:icon="@drawable/ic_send"
                app:iconGravity="textEnd"
                android:textStyle="bold"
                android:enabled="true" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>