<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardDistribuzione"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER CON CHECKBOX E INFO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Checkbox Selezione -->
            <CheckBox
                android:id="@+id/checkBoxDistribuzione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:buttonTint="#2196F3" />

            <!-- Emoji/Icona Distribuzione -->
            <TextView
                android:id="@+id/tvEmojiDistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🐧"
                android:textSize="32sp"
                android:layout_marginEnd="12dp" />

            <!-- Nome e Popolarità -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Nome Distribuzione -->
                <TextView
                    android:id="@+id/tvNomeDistribuzione"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubuntu Desktop"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Stelle Popolarità -->
                <TextView
                    android:id="@+id/tvPopolarita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★★★★★"
                    android:textColor="#FFC107"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Badge Difficoltà -->
            <TextView
                android:id="@+id/tvDifficolta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Principianti"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="#4CAF50"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- DESCRIZIONE -->
        <TextView
            android:id="@+id/tvDescrizioneDistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distribuzione user-friendly basata su Debian, perfetta per iniziare con Linux"
            android:textColor="#757575"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- TAGS (Opzionale) -->
        <LinearLayout
            android:id="@+id/layoutTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Indicatore Selezione (bordo colorato) -->
    <View
        android:id="@+id/selectionIndicator"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#2196F3"
        android:visibility="invisible"
        android:layout_gravity="bottom" />

</androidx.cardview.widget.CardView>