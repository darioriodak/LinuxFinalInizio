<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:id="@+id/cardDistribuzione">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con checkbox e nome -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Checkbox per selezione -->
            <CheckBox
                android:id="@+id/checkBoxDistribuzione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <!-- Emoji della distro -->
            <TextView
                android:id="@+id/tvEmojiDistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🐧"
                android:textSize="24sp"
                android:layout_marginEnd="8dp" />

            <!-- Nome distribuzione -->
            <TextView
                android:id="@+id/tvNomeDistribuzione"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ubuntu"
                android:textSize="18sp"
                android:textStyle="bold"
                 />

        </LinearLayout>

        <!-- Descrizione breve -->
        <TextView
            android:id="@+id/tvDescrizioneDistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distribuzione user-friendly per principianti"
            android:textSize="14sp"

            android:layout_marginBottom="12dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Footer con metadati -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Popolarità -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📊"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvPopolarita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★★★★★"
                    android:textSize="12sp"
                    android:textColor="#FFC107" />

            </LinearLayout>

            <!-- Difficoltà -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎯"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvDifficolta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Principianti"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Tag container (opzionale per future estensioni) -->
        <LinearLayout
            android:id="@+id/layoutTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:visibility="gone">
            <!-- I tag verranno aggiunti dinamicamente -->
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>