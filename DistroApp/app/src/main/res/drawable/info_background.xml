<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Sfondo azzurro chiaro per informazioni -->
    <solid android:color="#E3F2FD" />

    <!-- Bordo azzurro -->
    <stroke
        android:width="1dp"
        android:color="#BBDEFB" />

    <!-- Angoli arrotondati -->
    <corners android:radius="8dp" />

    <!-- Padding interno -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

</shape>